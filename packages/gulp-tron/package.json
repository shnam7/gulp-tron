{
    "name": "gulp-tron",
    "version": "1.0.0-alpha.3",
    "description": "Easy to use, flexible gulp build manager",
    "type": "module",
    "main": "./dist/index.js",
    "exports": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "dev": "tsc --watch",
        "build": "tsc",
        "test": "vitest run --coverage",
        "test:watch": "vitest watch --coverage",
        "clean": "rimraf ./dist ./coverage",
        "rebuild": "run-s clean build",
        "prepare-to-commit": "run-s rebuild test",
        "npm-dry-run": "npm publish --dry-run"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shnam7/gulp-tron"
    },
    "keywords": [
        "gulp",
        "task",
        "build",
        "manager",
        "builder"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/shnam7/gulp-tron/issues"
    },
    "homepage": "https://github.com/shnam7/gulp-tron#readme",
    "dependencies": {
        "del": "^7.1.0",
        "fast-glob": "^3.3.2",
        "gulp-debug": "^5.0.1",
        "gulp-filter": "^9.0.1",
        "gulp-order": "workspace:*",
        "gulp-rename": "^2.0.0",
        "rimraf": "^5.0.5",
        "stream-to-promise": "^3.0.0"
    },
    "peerDependencies": {
        "gulp": "^4.0.2"
    },
    "devDependencies": {
        "@gulp-tron/tsconfig": "workspace:*",
        "@types/browser-sync": "^2.29.0",
        "@types/gulp": "^4.0.17",
        "@types/gulp-debug": "^2.0.36",
        "@types/gulp-filter": "^3.0.39",
        "@types/gulp-rename": "^2.0.6",
        "@types/merge-stream": "^1.1.5",
        "@types/node": "^20.11.17",
        "@types/stream-to-promise": "^2.2.4",
        "@types/through2": "^2.0.41",
        "@vitest/coverage-v8": "^1.2.2",
        "browser-sync": "^3.0.2",
        "merge-stream": "^2.0.0",
        "npm-run-all": "^4.1.5",
        "through2": "^4.0.2",
        "typescript": "^5.3.3",
        "vinyl": "^3.0.0",
        "vitest": "^1.2.2"
    }
}
