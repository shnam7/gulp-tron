{
    "name": "gulp-tron",
    "version": "1.0.0-alpha.3",
    "description": "Easy to use, flexible gulp build manager",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsc --watch",
        "build": "tsc",
        "test": "vitest run --coverage",
        "test:watch": "vitest watch --coverage",
        "clean": "rimraf dist",
        "rebuild": "npm run clean && npm run build",
        "prepare-to-commit": "npm run rebuild && npm run test",
        "npm-dry-run": "npm publish --dry-run"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shnam7/gulp-tron"
    },
    "keywords": [
        "gulp",
        "task",
        "build",
        "manager",
        "builder"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/shnam7/gulp-tron/issues"
    },
    "homepage": "https://github.com/shnam7/gulp-tron#readme",
    "dependencies": {
        "@repo/mutex": "workspace:*",
        "chalk": "^5.3.0",
        "del": "^7.1.0",
        "fast-glob": "^3.3.2",
        "gulp-debug": "^5.0.1",
        "gulp-filter": "^9.0.1",
        "gulp-order": "^1.2.0",
        "rimraf": "^5.0.5",
        "upath": "^2.0.1"
    },
    "peerDependencies": {
        "gulp": "^4.0.2"
    },
    "devDependencies": {
        "@repo/typescript-config": "workspace:*",
        "@types/gulp": "^4.0.17",
        "@types/gulp-debug": "^2.0.36",
        "@types/gulp-filter": "^3.0.39",
        "@types/node": "^20.10.6",
        "@vitest/coverage-v8": "^1.1.3",
        "typescript": "^5.3.3",
        "vitest": "^1.1.3"
    }
}
