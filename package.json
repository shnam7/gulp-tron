{
    "name": "gulp-tron-repo",
    "private": true,
    "scripts": {
        "dev": "turbo dev --filter=01-conf...",
        "build": "turbo build",
        "clean": "pnpm run clean:apps && pnpm run clean:examples && pnpm run  clean:packages",
        "clean:apps": "turbo clean --filter=./apps/*",
        "clean:examples": "turbo clean --filter=./examples/*",
        "clean:packages": "turbo clean --filter=./packages/*",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "license": "MIT",
    "packageManager": "pnpm@8.15.0",
    "engines": {
        "node": ">=18"
    }
}
