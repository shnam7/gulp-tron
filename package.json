{
    "name": "gulp-tron-repo",
    "private": true,
    "scripts": {
        "dev": "turbo dev",
        "build": "turbo build",
        "clean": "run-s __clean:build_deps __clean:apps __clean:examples __clean:packages",
        "__clean:apps": "turbo clean --filter=./apps/*",
        "__clean:examples": "turbo clean --filter=./examples/*",
        "__clean:packages": "turbo clean --filter=./packages/*",
        "__clean:build_deps": "turbo build --filter=gulp-tron... --filter={./packages/plugin-*}...",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "license": "MIT",
    "packageManager": "pnpm@8.15.1",
    "engines": {
        "node": ">=16.14"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5"
    }
}
