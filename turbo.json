{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local", "tsconfig.json"],
    "pipeline": {
        "build": {
            "inputs": ["src/**", "test/**"],
            "outputs": ["dist/**", "!converag/**"],
            "dependsOn": ["^build"]
        },
        "test": {
            "inputs": ["test/**"],
            "cache": false
        },
        "clean": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        },

        "01-conf#build": {
            "cache": false
        },
        "01-task#build": {
            "cache": false
        }
    }
}
