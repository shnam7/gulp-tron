{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local", "tsconfig.json"],
    "pipeline": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "inputs": ["src/**", "test/**"],
            "outputs": ["dist/**", "!converag/**"],
            "dependsOn": ["^build"]
        },
        "test": {},
        "clean": {
            "cache": false
        }
    }
}
